journal = {Environmental Research},
keywords = {Black carbon,Cognitive performance,Fine particulate matter,Lung function,Mediation analysis,Pathways},
pages = {111533},
title = {{Long-term exposure to fine particulate matter, lung function and cognitive performance: A prospective Dutch cohort study on the underlying routes}},
