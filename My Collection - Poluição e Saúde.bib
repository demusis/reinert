keywords = {Ambient particulate matter (APM),Cardiovascular toxicity,Fission and fusion,Mitochondrial biogenesis,Mitochondrial dynamics,Mitochondrial dysfunction},
pages = {114639},
title = {{Urban particulate matter disturbs the equilibrium of mitochondrial dynamics and biogenesis in human vascular endothelial cells}},
