doi = {https://doi.org/10.1016/j.envpol.2017.12.094},
issn = {0269-7491},
journal = {Environmental Pollution},
keywords = {Children,Lung function,Municipal solid waste (MSW) landfill,Salivary lysozyme,Secretory immunoglobulin A (SIgA)},
pages = {382--390},
title = {{Effects of ambient air pollution from municipal solid waste landfill on children's non-specific immunity and respiratory health}},
