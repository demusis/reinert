journal = {Atmospheric Environment},
keywords = {Air pollution,Health effects,Mortality,Particulate matter,Source apportionment},
number = {9},
pages = {1666--1673},
title = {{The Denver Aerosol Sources and Health (DASH) study: Overview and early findings}},
url = {https://www.sciencedirect.com/science/article/pii/S1352231008011333},
