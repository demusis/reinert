volume = {110},
year = {2010}
}
@article{Ortiz2011,
abstract = {In 2007 we conducted a contingent valuation survey in Sao Paulo, Brazil, to estimate the population's willingness–to–pay (WTP) to avoid one hospital admission (HA) and one emergency–room visit (ER) due to respiratory diseases in adults and children younger than 5 years old; and cardiovascular diseases in adults only; both associated with atmospheric air pollution. Our annual mean WTP estimates are €81.82 (adult) and €137.92 (child) for HA; €48.40 (adult) and €90.66 (child) for ER due to respiratory diseases; €53.57 (ER) and €90.08 (HA) for cardiovascular diseases. Our results suggest altruism towards children, and a strong income effect on WTP. Results will help analysts evaluating the health benefits of specific policies with potential air pollution impacts in Sao Paulo, Brazil.},
