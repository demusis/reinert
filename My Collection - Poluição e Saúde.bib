issn = {0269-7491},
journal = {Environmental Pollution},
keywords = {Air pollution,Inflammation,Intra-tracheal instillation,Lungs,Methyltransferases,Nrf2 transcription factor,Obesogenic nutrition,Oxidative stress},
pages = {532--543},
title = {{Exposure to air pollution interacts with obesogenic nutrition to induce tissue-specific response patterns}},
