journal = {Environmental Pollution},
keywords = {Childhood asthma,Exposure assessment,Halogenated persistent organic pollutants,Indoor dust,Positive association},
pages = {389--398},
title = {{Typical halogenated persistent organic pollutants in indoor dust and the associations with childhood asthma in Shanghai, China}},
