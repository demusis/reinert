title = {{Human health risk assessment for PAHs, phthalates, elements, PCDD/Fs, and DL-PCBs in PM2.5 and for NMVOCs in two East-Mediterranean urban sites under industrial influence}},
url = {https://www.sciencedirect.com/science/article/pii/S1309104221003238},
