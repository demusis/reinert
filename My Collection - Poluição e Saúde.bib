issn = {0013-9351},
journal = {Environmental Research},
keywords = {Air pollution,Brain,Glucocorticoid,Hypothalamic-pituitary-adrenal(HPA) axis,Ozone,Stress hormone},
pages = {108717},
title = {{Stress hormones as potential mediators of air pollutant effects on the brain: Rapid induction of glucocorticoid-responsive genes}},
