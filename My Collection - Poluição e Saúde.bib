doi = {https://doi.org/10.1016/j.atmosenv.2013.07.020},
issn = {1352-2310},
journal = {Atmospheric Environment},
keywords = {Air pollution,Allergy,Asthma,Epidemiology,Population health,Regulatory monitoring,Satellite remote sensing},
pages = {161--171},
title = {{Comparison of remote sensing and fixed-site monitoring approaches for examining air pollution and health in a national study population}},
