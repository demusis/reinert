keywords = {Acute effects,Air pollution,Lupus nephritis,Systemic lupus erythematosus},
pages = {110875},
title = {{Acute effects of air pollution on lupus nephritis in patients with systemic lupus erythematosus: A multicenter panel study in China}},
url = {https://www.sciencedirect.com/science/article/pii/S0013935121001699},
volume = {195},
