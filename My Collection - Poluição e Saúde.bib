journal = {Environmental Research},
keywords = {Inflammatory response,Oxidative stress,PM,Source apportionment},
pages = {112466},
title = {{In-vitro oxidative potential and inflammatory response of ambient PM2.5 in a rural region of Northwest China: Association with chemical compositions and source contribution}},
