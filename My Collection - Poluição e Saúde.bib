journal = {Environmental Research},
keywords = {Air pollution,Asthma,Cardiovascular health,Laboratory-controlled human exposure study,Physical activity,Retinal imaging},
pages = {109270},
title = {{Vascular effects of physical activity are not modified by short-term inhaled diesel exhaust: Results of a controlled human exposure study}},
