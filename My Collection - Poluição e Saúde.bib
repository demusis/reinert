issn = {0269-7491},
journal = {Environmental Pollution},
keywords = {Digestive disease,Endocrine disease,PM,Skin disease,Urinary disease},
pages = {114205},
title = {{Particulate matter pollution and hospital outpatient visits for endocrine, digestive, urological, and dermatological diseases in Nanjing, China}},
