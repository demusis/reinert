journal = {Environmental Research},
keywords = {Health risk assessment,Hong Kong,Land-use regression,PM components,Spatiotemporal variability},
pages = {111866},
title = {{A novel approach for assessing the spatiotemporal trend of health risk from ambient particulate matter components: Case of Hong Kong}},
url = {https://www.sciencedirect.com/science/article/pii/S0013935121011609},
volume = {204},
