issn = {0269-7491},
journal = {Environmental Pollution},
keywords = {Dust,Exposure,Health risk,Microplastics,Microrubbers,Oxidative potential},
pages = {153--164},
title = {{Distribution and potential health impacts of microplastics and microrubbers in air and street dusts from Asaluyeh County, Iran}},
