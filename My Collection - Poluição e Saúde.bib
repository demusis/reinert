keywords = {Air pollution,Endothelial function,Fetal period,Prevention},
pages = {154--160},
title = {{The relationship of exposure to air pollutants in pregnancy with surrogate markers of endothelial dysfunction in umbilical cord}},
url = {https://www.sciencedirect.com/science/article/pii/S0013935115301808},
