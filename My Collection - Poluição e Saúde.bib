doi = {https://doi.org/10.1016/j.envres.2022.113881},
issn = {0013-9351},
journal = {Environmental Research},
keywords = {Air pollution,Cord blood,DNA methylation,Epigenetics,Ozone,Particulate matter},
pages = {113881},
title = {{Ambient air pollution during pregnancy and DNA methylation in umbilical cord blood, with potential mediation of associations with infant adiposity: The Healthy Start study}},
