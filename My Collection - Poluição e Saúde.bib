doi = {https://doi.org/10.1016/j.envres.2022.113220},
issn = {0013-9351},
journal = {Environmental Research},
keywords = {Atrial fibrillation,Nitrogen dioxide,Outpatient visits,Short-term exposure,Time-series study},
pages = {113220},
title = {{More obvious association between short-term ambient nitrogen dioxide and atrial fibrillation outpatient visits in cool seasons: A hospital-based study in northwestern China}},
