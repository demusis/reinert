issn = {0269-7491},
journal = {Environmental Pollution},
keywords = {Air quality,Hazardous emissions,Highway rehabilitation,Markov chain Monte Carlo,Worker exposure},
pages = {119872},
title = {{Exposure of construction workers to hazardous emissions in highway rehabilitation projects measured with low-cost sensors}},
url = {https://www.sciencedirect.com/science/article/pii/S0269749122010867},
volume = {313},
year = {2022}
}
@article{Liu2022b,
abstract = {Background
PM2.5 have been associated with weight change in animal models and non-pregnant populations. Evidence of associations between PM2.5 and gestational weight gain (GWG), an important determinant of course and outcomes of pregnancy, and subsequent birth outcomes is limited.
Methods
