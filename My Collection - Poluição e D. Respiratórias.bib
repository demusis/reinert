doi = {10.1016/J.ATMOSENV.2007.07.013},
issn = {1352-2310},
journal = {Atmospheric Environment},
keywords = {Air pollution,Cardiopulmonary mortality,Mortality,Nitrogen dioxide,Particulate matter,Time series},
month = {dec},
