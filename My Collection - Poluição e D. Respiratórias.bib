journal = {Environmental Research},
keywords = {Chemical constituents,Fine particulate matter,Fractional exhaled nitric oxide,Panel study},
pages = {264--268},
title = {{Association between fine particulate matter chemical constituents and airway inflammation: A panel study among healthy adults in China}},
