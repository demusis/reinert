issn = {0013-9351},
journal = {Environmental Research},
keywords = {Asthma,Ethylbenzene,Para-dichlorobenzene,Respiratory infections,School environment,Volatile organic compounds (VOC)},
pages = {111061},
title = {{Asthma symptoms and respiratory infections in Malaysian students-associations with ethnicity and chemical exposure at home and school}},
