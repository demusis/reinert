@article{Wu2020,
abstract = {Background
Ambient nitrogen dioxide is associated with asthma occurrence in adults in Western countries. However, two recent large-scale studies have provided inconclusive results regarding this association. Moreover, the association remains unknown in an Asian population.
Objective
