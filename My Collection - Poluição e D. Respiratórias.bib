keywords = {Black carbon,LDSA,Marine traffic,Particle size distribution,Traffic emissions,Urban environment},
pages = {118931},
title = {{Connection between lung deposited surface area (LDSA) and black carbon (BC) concentrations in road traffic and harbour environments}},
url = {https://www.sciencedirect.com/science/article/pii/S1352231021007536},
