journal = {Environmental Research},
keywords = {Air pollution,Cardiorespiratory disease,Human health,Spatial cluster analysis,Vehicle emissions},
pages = {452--460},
title = {{Association between vehicular emissions and cardiorespiratory disease risk in Brazil and its variation by spatial clustering of socio-economic factors}},
