issn = {0269-7491},
journal = {Environmental Pollution},
keywords = {Asthma,Asthma COPD Overlap,COPD,Particulate matter,Personal air pollution},
pages = {116329},
title = {{Acute respiratory response to individual particle exposure (PM1.0, PM2.5 and PM10) in the elderly with and without chronic respiratory diseases}},
