issn = {0954-6111},
journal = {Respiratory Medicine},
keywords = {Allergy,Asthma,Chronic bronchitis,Environmental factors,Nasal symptoms,Postal questionnaire,Socio economy},
month = {aug},
number = {8},
pages = {970--977},
pmid = {12924526},
