@article{Zhou2015,
abstract = {Background
China has experienced increasingly severe levels of air pollution in the past decades, yet studies on the health effects of air pollution in China at a national study level, remain limited. This study assess the sub-chronic effect of ambient air pollution on respiratory mortality in the 32 largest Chinese cities.
Methods
We employ two-way fixed effects panel data analysis and monthly air pollution and mortality panel data. We estimate associations between monthly respiratory mortality and air pollution; pollution is defined as particulate matter with aerodynamic diameter <10$\mu$m. We adjust for city characteristics, seasonality (monthly effects), and weather conditions (precipitation and temperature). We examine the associations between monthly injury mortality and air pollution to check for robustness.
