doi = {https://doi.org/10.1016/j.envres.2022.114100},
issn = {0013-9351},
journal = {Environmental Research},
keywords = {Air pollution,Effect modifier,Greenness,Tuberculosis},
pages = {114100},
title = {{Long-term exposure to ambient air pollution and greenness in relation to pulmonary tuberculosis in China: A nationwide modelling study}},
