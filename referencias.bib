   issue = {37},
   journal = {Atmospheric Environment},
   keywords = {Air pollution,Climate impacts,Emission scenarios,Emissions,Health impacts,Mitigation scenarios,Mobile air conditioners,Radiative forcing,Transport: road,Vehicle technologies,inland shipping,rail},
