   journal = {Atmospheric Environment},
   keywords = {Chongqing,Coal–biomass briquettes,Household stove,Indoor concentrations of gaseous pollutants,Sulfur feed,Sulfur-emission ratio},
   pages = {7924-7930},
   title = {Abatement of indoor air pollution achieved with coal–biomass household briquettes},
