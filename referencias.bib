   issue = {2},
   journal = {Environmental Research},
   keywords = {Air pollution,Air quality,Ambient air quality guideline,Health Impact,Sources of air pollution},
   month = {6},
   pages = {71-77},
   pmid = {12854685},
   publisher = {Academic Press},
   title = {Review of air pollution and health impacts in Malaysia},
