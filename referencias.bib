   journal = {Environmental Research},
   keywords = {Air pollution,Asthma,Children,Epidemiology,Public health},
   pages = {294-301},
   title = {The association between childhood asthma prevalence and monitored air pollutants in metropolitan areas, United States, 2001–2004},
