   journal = {Environmental Research},
   keywords = {Acid aerosol,Automobile emissions,Geothermal emissions,Hydrogen sulfide,Photochemical reaction},
   pages = {536-543},
   title = {Sulfur-rich geothermal emissions elevate acid aerosol levels in metropolitan Taipei},
