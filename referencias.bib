   issn = {1352-2310},
   issue = {31},
   journal = {Atmospheric Environment},
   keywords = {Denuder samplers,PM2.5 organic material,Real-time PM2.5,Semi-volatile PM2.5,TEOM},
   month = {10},
   pages = {4407-4417},
   publisher = {Pergamon},
   title = {The measurement of PM2.5, including semi-volatile components, in the EMPACT program: results from the Salt Lake City Study},
