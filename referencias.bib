   keywords = {Element carbon,Organic carbon,Prime OC/EC ratio,Secondary organic carbon},
   month = {7},
   pages = {3443-3452},
   publisher = {Pergamon},
   title = {The characteristics of carbonaceous species and their sources in PM2.5 in Beijing},
   volume = {38},
   year = {2004},
}
