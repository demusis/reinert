   journal = {Atmospheric Environment},
   keywords = {Cytotoxicity,Electronic waste (E-waste),Heavy metals,MTT assay,Polycyclic aromatic hydrocarbons (PAHs)},
   month = {11},
   pages = {6945-6955},
   publisher = {Pergamon},
   title = {Atmospheric levels and cytotoxicity of PAHs and heavy metals in TSP and PM2.5 at an electronic waste recycling site in southeast China},
