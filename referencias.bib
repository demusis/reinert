   doi = {10.1016/J.ENVRES.2006.04.002},
   issn = {0013-9351},
   issue = {1},
   journal = {Environmental Research},
   keywords = {Body mass index,Cadmium,Dietary supplementation,Malnutrition,Minerals,Occupation,Zinc},
   month = {9},
   pages = {83-89},
   pmid = {16729996},
   publisher = {Academic Press},
   title = {Anthropometric, environmental, and dietary predictors of elevated blood cadmium levels in Ukrainian children: Ukraine ELSPAC group},
   volume = {102},
