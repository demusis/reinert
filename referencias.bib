   doi = {https://doi.org/10.1016/j.atmosres.2010.02.008},
   issn = {0169-8095},
   issue = {4},
   journal = {Atmospheric Research},
   keywords = {ICP-MS,PM,Positive matrix factorization,Source-receptor model,Trace element},
   pages = {612-625},
   title = {PM10 metal concentrations and source identification using positive matrix factorization and wind sectoring in a French industrial zone},
   volume = {96},
   url = {https://www.sciencedirect.com/science/article/pii/S0169809510000451},
   year = {2010},
}
@article{Lim2010,
   abstract = {In this study, PM10-bound concentrations of 28 trace metals and 3 ionic components were measured from samples collected at Daejeon Industrial Complexes I and II, Korea from April 2000 to December 2002. Positive matrix factorization (PMF) and conditional probability function (CPF) were applied to these PM data sets to identify the diverse sources in the industrial area. A total of nine source types were identified to be important which include: secondary aerosol, cement/construction, soil dust, road dust, vehicle exhaust, incineration/Pb-related industry, metal smelting, fossil fuel combustion, and field burning. Results of our study suggest that there are competing relationships between anthropogenic and natural source processes in this industrial area.},
