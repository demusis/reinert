   journal = {Environmental Research},
   keywords = {Asthma,Indoor air pollution,Multipollution,Rhinitis,VOC},
   pages = {425-434},
   title = {Quantitative assessments of indoor air pollution and respiratory health in a population-based sample of French dwellings},
   volume = {111},
   url = {https://www.sciencedirect.com/science/article/pii/S0013935111000636},
