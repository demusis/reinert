   issue = {10},
   journal = {Atmospheric Environment},
   keywords = {Air,Hydrogen peroxide,Master Mechanism model,Oxidants,Ozone},
   pages = {2530-2542},
   title = {Atmospheric H2O2 measurement and modeling campaign during summer 2004 in Zagreb, Croatia},
   volume = {42},
