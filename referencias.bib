   issn = {0013-9351},
   issue = {3},
   journal = {Environmental Research},
   keywords = {Cytotoxicity,Human cells,Organic extracts,Particulate matter,Puerto Rico},
   month = {11},
   pages = {314-325},
   pmid = {16842771},
   publisher = {Academic Press},
   title = {Toxicity and metal content of organic solvent extracts from airborne particulate matter in Puerto Rico},
   volume = {102},
