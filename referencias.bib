   issue = {13},
   journal = {Atmospheric Environment},
   keywords = {ATOFMS,Aerosol mass spectrometry,Lawn mowing,ToF-AMS},
   pages = {3006-3017},
   title = {Characterization of aerosol particles from grass mowing by joint deployment of ToF-AMS and ATOFMS instruments},
