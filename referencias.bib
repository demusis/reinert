   issue = {10},
   journal = {Atmospheric Environment},
   keywords = {Aerosol composition,Aqueous extracts,Major ions,PEF,PM2.5,PM2.5-10,Urban pollution},
   month = {3},
   pages = {2036-2048},
   publisher = {Pergamon},
   title = {Association between ionic composition of fine and coarse aerosol soluble fraction and peak expiratory flow of asthmatic patients in São Paulo city (Brazil)},
