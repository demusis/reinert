   doi = {https://doi.org/10.1016/j.atmosenv.2007.09.072},
   issn = {1352-2310},
   issue = {3},
   journal = {Atmospheric Environment},
   keywords = {Characterization factor,Human health damage,Intake factor,Life cycle impact assessment,Ozone,PM},
   pages = {441-453},
   title = {European characterization factors for human health damage of PM10 and ozone in life cycle impact assessment},
   volume = {42},
   url = {https://www.sciencedirect.com/science/article/pii/S1352231007008667},
