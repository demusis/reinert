   pages = {50-59},
   title = {Vertical distribution of optical and micro-physical properties of ambient aerosols during dry haze periods in Shanghai},
   volume = {50},
   url = {https://www.sciencedirect.com/science/article/pii/S1352231012000052},
   year = {2012},
}
@article{Cho2012,
