   journal = {Atmospheric Research},
   keywords = {Ambient,Basin area,Dust storm,PCDD/Fs,Pearson's correlation analysis},
   pages = {279-293},
   title = {Impacts of dust storms on PCDD/Fs and regulated harmful matter in a basin area},
   volume = {97},
   url = {https://www.sciencedirect.com/science/article/pii/S016980951000061X},
