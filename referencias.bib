   issn = {0013-9351},
   issue = {1},
   journal = {Environmental Research},
   keywords = {Dental fluorosis,Dose-effect relationship,Drinking water fluoride,Liver and kidney functions,Serum and urine fluoride},
   month = {1},
   pages = {112-116},
   pmid = {16834990},
   publisher = {Academic Press},
   title = {Dose–effect relationship between drinking water fluoride levels and damage to liver and kidney functions in children},
