   issue = {2},
   journal = {Atmospheric Environment},
   keywords = {Biomonitoring,Lead pollution,Magnetism,Vehicle pollution},
   pages = {364-373},
   title = {Spatial variation in vehicle-derived metal pollution identified by magnetic and elemental analysis of roadside tree leaves},
