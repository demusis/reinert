   keywords = {Air pollution,Asthma,Atmospheric remote sensing,COPD,Sputum,Temperature inversions},
   pages = {624-632},
   title = {Atmospheric remote sensing to detect effects of temperature inversions on sputum cell counts in airway diseases},
