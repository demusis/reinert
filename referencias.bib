   keywords = {Particle number,Re-suspension,Size distribution,Street canyon,Urban aerosol},
   month = {4},
   pages = {1563-1571},
   publisher = {Pergamon},
   title = {A case study of aerosol (4.6 nm<Dp<10 μm) number and mass size distribution measurements in a busy street canyon in Manchester, UK},
   volume = {37},
   year = {2003},
}
@article{Luttinger2003,
   abstract = {A study to try to better understand the interactions between various air contaminants and acute asthma exacerbations is described. The study evaluates temporal associations between a panel of air contaminants and acute asthmatic exacerbations as measured by emergency room visits for asthma in communities in the Bronx and Manhattan in New York City (NYC). In addition, ambient levels of various air pollutants in two NYC communities are being compared. Almost 2 years of daily data have been collected for most of the air contaminants to be investigated. The air contaminants measured include gaseous compounds (ozone, sulfur dioxide, nitrogen oxides, aldehydes, nitrous acid, nitric acid, hydrochloric acid and ammonia), particulate matter components (metals, elemental and organic carbon, sulfate, hydrogen ion, pollen, mold spores and particle mass and number). © 2003 Elsevier Science Ltd. All rights reserved.},
