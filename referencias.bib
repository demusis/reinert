   journal = {Atmospheric Environment},
   keywords = {Air quality guidelines,Biomass,Emission factors,Stove testing},
   pages = {3237-3243},
   title = {Modeling indoor air pollution from cookstove emissions in developing countries using a Monte Carlo single-box model},
   volume = {45},
   url = {https://www.sciencedirect.com/science/article/pii/S1352231011003049},
