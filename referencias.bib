   title = {Variations of urban aerosols in the western Mediterranean},
   volume = {42},
   url = {https://www.sciencedirect.com/science/article/pii/S1352231008008467},
   year = {2008},
}
@article{Parra2008,
   abstract = {Indoor and outdoor concentrations of volatile organic compounds (VOCs) were measured in 30 pubs and cafés (13 smoking, 13 non-smoking and 4 mixed atmospheres) in Pamplona city, Spain. The samples were obtained using a sampling pocket pump connected to stainless steel tubes filled with Tenax TA, and subsequently analysed by means of GC–MS coupled to a thermal desorption unit. The levels registered were found to be generally higher indoors. Smoking, cleaning products and the entrance of outdoor pollutants were identified as the main sources of these compounds, the later being especially relevant in non-smoking areas. BTEX concentrations were higher during the winter months and higher in smoking areas also.},
