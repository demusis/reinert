   issue = {10},
   journal = {Atmospheric Environment},
   keywords = {Coagulation,Condensation,Exhaust emissions,Particle size distribution,Urban aerosol},
   month = {3},
   pages = {2145-2155},
   publisher = {Pergamon},
   title = {The role of ambient temperature for particle number concentrations in a street canyon},
   volume = {41},
   year = {2007},
}
